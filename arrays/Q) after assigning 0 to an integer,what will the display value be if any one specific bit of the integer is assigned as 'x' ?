module top;
  
  integer num;
  initial
    begin
      num=0;
      
      $display("%h",num);
      
      num[7]=1'bx;
      $display("%0h",num);
      $display("%h",num);
      $display("%d",num);
      $display("%0d",num);
    end
  
endmodule
